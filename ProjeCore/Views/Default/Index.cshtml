@using ProjeCore.Models
@model List<Birim>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br />
<h2 style="text-align: center;">Сабактардын тизмеси</h2>

<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Сабактар</th>
        <th>Өчүрүү</th>
        <th>Жаңылоо</th>
        <th>Толук маалымат</th>
    </tr>
    @foreach(var x in Model)
    {
        <tr>
            <td>@x.BirimID</td>
            <td>@x.BirimAd</td>
            <td><a href="/Default/BirimSil/@x.BirimID" class="btn btn-danger">Өчүрүү</a></td>
            <td><a href="/Default/BirimGetir/@x.BirimID" class="btn btn-success">Өзгөртүү</a></td>
            <td><a href="/Default/BirimDetay/@x.BirimID" class="btn btn-default" style="background-color:#dee61d">Көрүү</a></td>
        </tr>
    }
</table>

<a href="/Default/YeniBirim" class="btn btn-primary">Жаңы сабак кошуу</a>

