@using ProjeCore.Models
@model List<Personel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>SoyAd</th>
        <th>Sehir</th>
        <th>Birim</th>
        <th>Sil</th>
        <th>Guncelle</th>
    </tr>
    @foreach(var x in Model)
    {
        <tr>
            <td>@x.PersonelID</td>
            <td>@x.Ad</td>
            <td>@x.Soyad</td>
            <td>@x.Sehir</td>    
            <td>@x.Birim.BirimAd</td>    
            <td><a href="/Personalim/PersonelSil/@x.PersonelID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Personelim/PersonelGetir/@x.PersonelID" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>

<a href="/Personelim/YeniPersonel" class="btn btn-primary">Yeni Personal</a>
